---
import Footer from '@components/Footer.astro';
import ImageComp from '@components/ImageComp.astro';
import ProgressBar from '@components/ProgressBar.astro';
import Layout from '@layouts/Layout.astro';
import '@styles/global.css';

let projectName = Astro.params.projectname;

// Fetch data from the WordPress API using the project slug from the URL
const response = await fetch(`https://northernsky.auxcgen.com/wp-json/wp/v2/project?slug=${projectName}`);
const [projectData] = await response.json();

const {
  title,
  meta_box: { location, apartment_types, project_size, completion_date, project_area, project_banner },
} = projectData || {};
---

<style>
  .text-gradient {
    background: linear-gradient(to bottom, white, lightblue);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>

<Layout title="Projects" />

<Footer />
